<h1>Blogs</h1>

<% if @blogs.empty? %>
  has no blogs.
<% else %>
  <ul>
    <% @blogs.each do |blog| %>
      <li><%= link_to "#{sanitize textilize(blog.title)}", conversatio_blog_path(blog), :title => "#{sanitize (blog.title)}" %> (<%=blog.published_posts.size %> posts)</li>
    <% end %>
  </ul>
<% end %>

<%= will_paginate @blogs %>

<strong>Tags</strong>
<ul class="tags">
  <% tag_cloud_blogs %w(l1 l2 l3 l4 l5) do |tag, css_class| %>
     <li class="<%= css_class -%>"><%= link_to tag.name, tag_conversatio_blogs_posts_path(tag.name) %></li>
  <% end %>
</ul>