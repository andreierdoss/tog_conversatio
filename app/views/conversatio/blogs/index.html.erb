<div class="portlet portletH" id="portlet_groups">
    <h2><span>Blogs</span></h2>
    <p><%= link_to 'Create your blog', new_member_conversatio_blog_path, :class => 'button add' %></p> 
    <br/>   
    <div class="portlet_content">
        <ul>
          <% if @blogs.empty? %>
            <li class="clearfix">There isn't any blogs yet.</li>
          <% else %>          
            <% @blogs.each do |blog| %>
            <li class="clearfix">
                <div class="image">
                  <%=link_to icon_for_profile(blog.author.profile, 'small'), profile_path(blog.author.profile), :title => blog.author.profile.full_name %>
                </div> 
                <div class="title"><%= link_to "#{sanitize textilize(blog.title)}", conversatio_blog_path(blog), :title => "#{sanitize(blog.title)}" %></div>
                <div class="text">
                  Created by <%= link_to blog.author.profile.full_name, profile_url(blog.author.profile) %>
                  <br/>
                  <%= blog.description %>
                </div>
                <div class="members"><strong><%=blog.published_posts.size %> posts</strong></div>
            </li>          
            <%end%> 
          <%end%>         
        </ul>
    </div>    
</div>


<%= will_paginate @blogs %>

<% content_for :sidebar do %>

  <%= render :partial => 'tag_cloud_blogs' %>

  <%= render :partial => 'member/conversatio/blogs/blogs' %>
  
<% end %>