<% include_autodiscovery(:atom, formatted_conversatio_blog_url(@blog, :atom), :title => @blog.title) %>

<h1><%= @blog.title -%></h1>

<% if @posts.empty? %>
  has no blog posts.
<% else %>
  <% @posts.each do |post| %>
    <div id="post_<%= post.id %>" class="border_top">
      <h2><%= link_to "#{sanitize textilize(post.title)}", conversatio_blog_post_path(@blog, post), :title => "#{sanitize textilize(post.title)}" %></h2>
        <div>Posted <%= time_ago_in_words post.created_at %></div>
        <%= render :partial => 'conversatio/posts/tags', :locals => { :post => post } %>

        <div><%= sanitize textilize(post.body) %></div>
        <div id="border_top">
          <%= "Comments (#{post.comments.size})" %> | <%= link_to 'Add a Comment', conversatio_blog_post_path(@blog, post), :title => "Leaving A Comment On #{h post.title}" %>
        </div>
    </div>
  <% end %>
<% end %>

<%= render :partial => 'tag_cloud', :locals => { :blog => @blog } %>

