<div class="portlet portletJ" id="portlet_pluginsTog">
    <h2><span>Tags on '<%= blog.title %>'</span></h2>
    <div class="portlet_content">
      <ul class="tags">
        <% tag_cloud_posts(%w(l1 l2 l3 l4 l5)) do |tag, css_class| %>
           <li class="<%= css_class -%>"><%= link_to tag.name, tag_conversatio_blog_posts_path(blog, tag.name) %></li>
        <% end %>
      </ul>
    </div>    
</div> <!-- /.portlet_pluginsTog -->