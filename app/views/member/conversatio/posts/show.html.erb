<% @columns_distribution="col_100" %>

<div class="titleB">Comments: <%= @post.title %></div>
<table class="tableB">
  <thead>
    <tr>
      <th>Author</th>
      <th>Comment</th>
      <th nowrap="nowrap">Created at</th>
      <th>Spam</th>
      <th>&nbsp;</th>
    </tr>
  </thead>
  <tbody>
    <% for comment in @comments %>
    <tr<%= cycle('',' class="pair"') -%>>
      <td><%= comment.user.login %></td>
      <td><%= comment.comment %></td>
      <td nowrap="nowrap"><%= comment.created_at %></td>
      <td><%= comment.spam? %></td>
      <td><%= link_to "Remove", comment_remove_path(comment), {:confirm => 'Are you sure you want to remove this comment?'} -%></td>
    </tr>
    <% end %>
    <% if @comments.blank? %>
      <tr>
         <td colspan="4">No comments.</td>
      </tr>
    <% end %>
  </tbody>
</table>